@model SearchCriteria;
@using (Html.BeginForm("SearchResult", "Home", FormMethod.Post, new {@class="navbar-form pull-right form-inline col-xs-4", role="search"}))
{
    <div class="input-group">
        @Html.EditorFor(m => m.SearchString, new { htmlAttributes = new {@class="form-control", type="text", placeholder="Search..."} })
        <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"> Search</i></button>
        </div>
    </div>
}
