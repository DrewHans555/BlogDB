@model PostModel
<h2>Edit Post</h2>
@using (Html.BeginForm("EditPostResult","Home",FormMethod.Post,new {postid=Model.PostID, @class="form-horizontal"}))
{
    <div class="row">
        <div class="input-group col-md-12">
            @Html.HiddenFor(m => m.PostID)
            <div class="form-group">
                <label for="titletext" class="control-label">Title:</label>
                @Html.TextBoxFor(m => m.Title, new {@class="form-control", id="titletext"})
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="authortext" class="control-label">Author:</label>
                @Html.TextBoxFor(m => m.Author, new {@class="form-control", id="authortext"})
                @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="bodytext" class="control-label">Body:</label>
                @Html.TextAreaFor(m => m.Body, new {@class="form-control", id="bodytext", rows="5"})
                @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
            </div>
            <div>
                <input type="submit" class="btn btn-success box-shadow-4dp" value="Save" />
                @await Html.PartialAsync("BackButton")
            </div>
            
        </div>
    </div>
}