@model List<PostModel>
<style = "text/css">
li{
    padding:0.25em
}
</style>

<table id="viewallposts" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var post in Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="ViewSinglePost" class="navbar-brand" asp-route-postid="@post.PostID">@post.Title</a></td>
                <td><a asp-controller="Home" asp-action="ViewByAuthor" class="navbar-brand" asp-route-authorid="@post.AuthorID">@post.AuthorName</a></td>
                <td><a asp-controller="Home" asp-action="ViewSinglePost" class="navbar-brand" asp-route-postid="@post.PostID">@post.Timestamp.ToLocalTime()</a></td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready( function () {
        $('#viewallposts').DataTable({searching: false, paging: true});
    });
</script>

@await Html.PartialAsync("/Views/Partials/BackButton.cshtml")
