@model BlogDB.Core.Post

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Title</h2>
        <h4>by @Model.Author <small>@Model.Timestamp.ToString("dddd, dd MMMM yyyy hh:mm tt UTC")</small></h4>
    </div>
    <div class="col-md-12">
        <h5>@Model.Body.ToString()</h5>
    </div>
    <div class="btn-group">    
        @using (Html.BeginForm("DeletePostResult","Home",FormMethod.Post,new {postid=Model.PostID, @class="div"}))
        {
            @Html.HiddenFor(m => m.PostID)
            <!-- <input type="submit" class="btn btn-danger box-shadow-4dp" value="Confirm deletion" data-toggle="modal" data-target="#deleteConfirmation" /> -->
            <a class="btn btn-primary" href="/Home/EditPost?postid=@Model.PostID">Edit Post</a>
            @await Html.PartialAsync("DeleteButton", Model)
        }
        @await Html.PartialAsync("BackButton")
    </div>
</div>

