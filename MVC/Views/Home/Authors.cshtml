@model List<BlogDB.Core.Author>
<table id="viewauthors" style="width:100%">
    <thead>
        <tr>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var author in Model)
        {
            <tr>
                <td><a class="text-capitalize" href="/Home/ViewByAuthor/?authorid=@author.ID">@author.Name</a></td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready( function () {
        $('#viewauthors').DataTable({searching: false, paging: true});
    });
</script>
@await Html.PartialAsync("/Views/Partials/BackButton.cshtml")